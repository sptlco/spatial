{
  "include-v-in-tag": false,
  "group-pull-request-title-pattern": "chore: Release ${version}",
  "pull-request-header": "Release Notes",
  "pull-request-footer": "This pull request was generated automatically.\nPlease review and merge to publish the release.",
  "packages": {
    "api": {
      "package-name": "spatial-api",
      "changelog-path": "CHANGES.md",
      "release-type": "simple",
      "extra-files": [ "package.json" ]
    },
    "cloud": {
      "package-name": "spatial-cloud",
      "changelog-path": "CHANGES.md",
      "release-type": "simple",
      "extra-files": [ 
        "Core/Spatial.csproj",
        {
          "type": "json",
          "path": "Server/appsettings.json",
          "jsonpath": "$.Version"
        }
      ]
    },
    "interface/web": {
      "package-name": "spatial-interface-web",
      "changelog-path": "CHANGES.md",
      "release-type": "simple",
      "extra-files": [ "package.json" ]
    }
  }
}
